<div class="container mt-5">
  <h1>Add a new review</h1>
  <%= simple_form_for [@restaurant, @review] do |f| %> <!-- [ ] and not ( )-->
    <%= f.input :rating %>
    <%= f.input :content %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>
  <br>
  <%= link_to "Back", restaurants_path(@restaurant), class: "btn btn-primary" %>
</div>
